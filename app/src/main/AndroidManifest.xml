<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.hugoandrade.calendarviewapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="org.hugoandrade.calendario.LoginActivity"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar">
        <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="org.hugoandrade.calendario.CalendarViewWithNotesActivitySDK21"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="org.hugoandrade.calendario.CreateEventActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="org.hugoandrade.calendario.SelectDateAndTimeActivity"
            android:theme="@style/AppTheme.NoActionBar.Transition">
        </activity>

        <activity
            android:name="org.hugoandrade.calendario.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>